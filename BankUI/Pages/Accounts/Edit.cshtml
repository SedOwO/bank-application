@page
@model BankUI.Pages.Accounts.EditModel
@{
	ViewData["Title"] = "Edit Account";
}

<h2>Edit Account</h2>

<form method="post">
    <div class="mb-3">
        <label asp-for="Account.AccountId" class="form-label"></label>
        <input asp-for="Account.AccountId" class="form-control" disabled />
        <input type="hidden" asp-for="Account.AccountId" />
    </div>
    <div class="mb-3">
        <label asp-for="Account.AccountNumber" class="form-label"></label>
        <input asp-for="Account.AccountNumber" class="form-control" disabled />
        <input type="hidden" asp-for="Account.AccountNumber" />
    </div>    
    <div class="mb-3">
        <label asp-for="Account.CustomerId" class="form-label"></label>
        <input asp-for="Account.CustomerId" class="form-control" disabled />
        <input type="hidden" asp-for="Account.CustomerId" />
    </div>
    
    <div class="mb-3">
        <label class="form-label">Bank</label>
        <select asp-for="Account.BankId" asp-items="Model.BankOptions" class="form-select">
            <option value="">-- Select Bank --</option>
        </select>
        <span asp-validation-for="Account.BankId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Account.Balance" class="form-label"></label>
        <input asp-for="Account.Balance" class="form-control" />
        <span asp-validation-for="Account.Balance" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Edit</button>
    <a asp-page="Index" class="btn btn-secondary">Go Back</a>

</form>
