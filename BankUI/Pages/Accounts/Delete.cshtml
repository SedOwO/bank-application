@page
@model BankUI.Pages.Accounts.DeleteModel
@{
	ViewData["Title"] = "Delete Account";
}

<h2>Delete Account</h2>

<div class="alert alert-warning">
	Are you sure you want to delete this account
</div>

<div class="row">
	<dt class="col-sm-2">Account ID</dt>
	<dd class="col-sm-2">@Model.Account.AccountId</dd>

	<dt class="col-sm-2">Account Number</dt>
	<dd class="col-sm-2">@Model.Account.AccountNumber</dd>

	<dt class="col-sm-2">Account Type</dt>
	<dd class="col-sm-2">@Model.Account.AccountType</dd>

</div>

<form method="post">
	<button type="submit" class="btn btn-danger">Delete</button>
	<a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
