@page
@model BankUI.Pages.Accounts.IndexModel
@{
	ViewData["Title"] = "Account Search";
}

<h2>Find Account</h2>

<a asp-page="Create" class="btn btn-primary">New Account</a>

<form class="mb-3" method="post">
	<div asp-validation-summary="All" class="text-danger"></div>

	<div class="form-group">
		<label>Enter Account ID</label>
		<input asp-for="AccountId" class="form-control" />
		<span asp-validation-for="AccountId" class="text-danger"></span>
	</div>
	<button type="submit" class="btn btn-primary mt-2">Search</button>
</form>

@if (Model.Account != null)
{
	<h3>Account Details</h3>

	<dl class="row">
		<dt class="col-sm-2">Account ID</dt>
		<dd class="col-sm-10">@Model.Account.AccountId</dd>

		<dt class="col-sm-2">Customer ID</dt>
		<dd class="col-sm-10">@Model.Account.CustomerId</dd>

		<dt class="col-sm-2">Bank ID</dt>
		<dd class="col-sm-10">@Model.Account.BankId</dd>

		<dt class="col-sm-2">Account Number</dt>
		<dd class="col-sm-10">@Model.Account.AccountNumber</dd>

		<dt class="col-sm-2">Balance</dt>
		<dd class="col-sm-10">@Model.Account.Balance</dd>
	</dl>

	<a asp-page="Edit" asp-route-id="@Model.Account.AccountId" class="btn btn-warning">Edit</a>
	<a asp-page="Delete" asp-route-id="@Model.Account.AccountId" class="btn btn-danger">Delete</a>

}

