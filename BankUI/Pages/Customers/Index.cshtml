@page
@model BankUI.Pages.Customers.IndexModel
@{
	ViewData["Title"] = "Customer Search";
}

<h2>Find Customer</h2>

<a asp-page="Create" class="btn btn-primary">New Customer</a>

<form class="mb-3" method="post">
	<div asp-validation-summary="All" class="text-danger"></div>

	<div class="form-group">
		<label>Enter Customer ID</label>
		<input asp-for="CustomerId" class="form-control" />
		<span asp-validation-for="CustomerId" class="text-danger"></span>
	</div>
	<button type="submit" class="btn btn-primary mt-2">Search</button>
</form>

@if (Model.Customer != null)
{
	<h3>Customer Details</h3>
	<dl class="row">
		<dt class="col-sm-2">ID</dt>
		<dd class="col-sm-10">@Model.Customer.CustomerId</dd>

		<dt class="col-sm-2">First Name</dt>
		<dd class="col-sm-10">@Model.Customer.FirstName</dd>

		<dt class="col-sm-2">Last Name</dt>
		<dd class="col-sm-10">@Model.Customer.LastName</dd>

		<dt class="col-sm-2">DOB</dt>
		<dd class="col-sm-10">@Model.Customer.Dob</dd>

		<dt class="col-sm-2">Email</dt>
		<dd class="col-sm-10">@Model.Customer.Email</dd>

		<dt class="col-sm-2">Phone Number</dt>
		<dd class="col-sm-10">@Model.Customer.Phone</dd>

		<dt class="col-sm-2">Address</dt>
		<dd class="col-sm-10">@Model.Customer.Address</dd>
	</dl>

	<a asp-page="Edit" asp-route-id="@Model.Customer.CustomerId" class="btn btn-warning">Edit</a>
	<a asp-page="Delete" asp-route-id="@Model.Customer.CustomerId" class="btn btn-danger">Delete</a>
}
