@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<div class="container mt-5">
    <h1 class="mb-4">Bank Management Dashboard</h1>

    <div class="row">
        <div class="col-md-4">
            <div class="card text-center shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="card-title">Accounts</h5>
                    <p class="card-text">View, create, and manage accounts.</p>
                    <a class="btn btn-primary" asp-page="/Accounts/Index">Go to Accounts</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-center shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="card-title">Customers</h5>
                    <p class="card-text">Search, edit, and manage customers.</p>
                    <a class="btn btn-primary" asp-page="/Customers/Index">Go to Customers</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-center shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="card-title">Banks</h5>
                    <p class="card-text">View and manage bank information.</p>
                    <a class="btn btn-primary" asp-page="/Banks/Index">Go to Banks</a>
                </div>
            </div>
        </div>
    </div>
</div>


